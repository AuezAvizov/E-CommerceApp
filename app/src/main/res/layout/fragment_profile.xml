<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/profile"
    android:layout_height="match_parent">

    <!-- Шапка профиля с изображением и основной информацией -->
    <LinearLayout
        android:id="@+id/profile_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#B3B3B3"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>

        <!-- Изображение профиля -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/avatar"
            android:layout_gravity="center_horizontal"/>

        <!-- Имя пользователя -->
        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Имя пользователя"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>

        <!-- ФИО пользователя -->
        <TextView
            android:id="@+id/profile_fio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fio пользователя"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>

        <!-- Email пользователя -->
        <TextView
            android:id="@+id/profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email пользователя"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>

        <!-- Телефон пользователя -->
        <TextView
            android:id="@+id/profile_contact_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Телефон пользователя"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>

        <!-- Адрес пользователя -->
        <TextView
            android:id="@+id/profile_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Адрес пользователя"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>

        <!-- Город пользователя -->
        <TextView
            android:id="@+id/profile_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Город пользователя"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>

        <!-- Ссылка на социальные сети -->
        <TextView
            android:id="@+id/socLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soclink"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_edit_profile"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Edit Profile Information"
        android:textColor="@color/gray"
        android:layout_below="@id/profile_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_reset_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:textColor="@color/gray"
        android:layout_below="@id/btn_edit_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/settings"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textColor="@color/gray"
        android:layout_below="@id/btn_reset_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/exitBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Log out of your account"
        android:textColor="@color/gray"
        android:layout_below="@id/settings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
</RelativeLayout>
